@using ExpenseManagement.Model
@model UserDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] NLICEXMAN</title>
    <link rel="stylesheet" href="~/css/style2.css">
</head>

<body>
     <div class="content-wrapper">
        <section class="content">
          <div class="container-fluid">
              <main>
  <div class="box">
    <div class="inner-box">
      <div class="forms-wrap">
        <form asp-action="LogIn" asp-controller="Home" autocomplete="off" class="sign-in-form">
          <div class="logo">
            <img src="~/img/logo_NLIC.jpg" alt="nepallife" style="height: 40px; width:40px;"/>
            <h4>NEPALLIFE EXMAN</h4>
          </div>

          <div class="heading">
                <h2>Welcome Back</h2>
                <h6>Not registred yet?</h6>
                <a href="#" class="toggle">Sign up</a>
          </div>

          <div class="actual-form">
            <div class="input-wrap">
              <input asp-for="login.Username" minlength="4" class="input-field" autocomplete="off" placeholder="Username" required/>
              <span asp-validation-for="login.Username" class="text-danger"></span>
            </div>

            <div class="input-wrap">
              <input asp-for="login.Password" minlength="4" class="input-field" autocomplete="off" placeholder="Password" required/>
              <span asp-validation-for="login.Password" class="text-danger"></span>
            </div>

            <input type="submit" value="Sign In" class="sign-btn" />

            <p class="text">
              Forgotten your password or you login datails?
              <a href="#">Get help</a> signing in
            </p>
          </div>
        </form>

        <form asp-action="Register" autocomplete="off" class="sign-up-form">
              <div class="logo">
                <img src="~/img/logo_NLIC.jpg" alt="nepallife" style="height: 40px; width:40px;"/>
                <h4>NEPALLIFE EXMAN</h4>
              </div>

              <div class="heading">
                <h2>Get Started</h2>
                <h6>Already have an account?</h6>
                <a href="#" class="toggle">Sign in</a>
              </div>

              <div class="actual-form">
                <div class="input-wrap">
                  <input asp-for="register.Username" minlength="4" class="input-field" autocomplete="off" placeholder="Username" required/>
                  <span asp-validation-for="register.Username" class="text-danger"></span>
                </div>

                <div class="input-wrap">
                  <input asp-for="register.EmailId" minlength="4" class="input-field" autocomplete="off" placeholder="Email" required/>
                  <span asp-validation-for="register.EmailId" class="text-danger"></span>
                </div>

                <div class="input-wrap">
                  <input asp-for="register.Password" minlength="4" class="input-field" autocomplete="off" placeholder="Password" required/>
                  <span asp-validation-for="register.Password" class="text-danger"></span>
                </div>

                <input type="submit" value="Sign Up" class="sign-btn" />

                <p class="text">
                  Forgotten your password or you login datails?
                  <a href="#">Get help</a> to register
                </p>
              </div>
        </form>
      </div>

      <div class="carousel">
        <div class="images-wrapper">
          <img src="~/img/logo_NLIC.jpg" class="image img-1 show" alt="" />
          <img src="~/img/download.jpg" class="image img-2" alt="" />
          <img src="~/img/download (1).jpg" class="image img-3" alt="" />
        </div>

        <div class="text-slider">
              <div class="text-wrap">
                <div class="text-group">
                  <h2>Welcome to EXMAN</h2>
                  <h2>Report Branch Expense</h2>
                  <h2>Notiy Finance Department</h2>
                </div>
              </div>

              <div class="bullets">
                <span class="active" data-value="1"></span>
                <span data-value="2"></span>
                <span data-value="3"></span>
              </div>
        </div>
      </div>
    </div>
  </div>
</main>
          </div>
        </section>
    </div>

<script src="~/js/app.js"></script>
</body>
</html>